<% if(typeof hero != "undefined" && hero) { %>
  <div class="col-md-12">
    <img class="banner" src="/images/writing/<%- current.source %>/hero.jpg" title="<%- title %>" />
  </div>
<% } %>

<div class="col-md-offset-2 col-md-10">
  <div class="heading">
    <ul class="list-unstyled meta-header">
      <li><h1 class="meta-title"><%- title %></h1><li>
      <% if(typeof tagline != "undefined") { %>
        <li class="meta-tagline"><%- tagline %></li>
      <% } %>
    </ul>
  </div>
</div>
  
<div class="col-md-2">
  <div class="sidebar">
    <p><%- partial("../_shared/_tagline") %></p>
  </div>
</div>

<div class="col-md-8">
  <div class="content">
    <%- yield %>
  </div>

  <% if(typeof date != "undefined" || typeof acknowledgements != "undefined") { %>
    <dl class="dl-horizontal meta-footer">
      <% if(typeof date != "undefined") { %>
        <dt>Posted</dt>
        <dd><%- date %></dd>
      <% } %>
      <% if(typeof acknowledgements != "undefined") { %>
        <dt>Acknowledgements</dt>
        <% for(slug in acknowledgements) { %>
        <% var person = acknowledgements[slug] %>
        <dd>
          <a href="http://twitter.com/<%- slug %>" title="@<%- slug %> on Twitter"><%- person.name %></a> <%- person.role %>
        </dd>
        <% } %>
      <% } %>
    </dl>
  <% } %>
</div>